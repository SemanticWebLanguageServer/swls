{
	"name": "jsonld-lsp",
	"publisher": "ajuvercr",
	"displayName": "jsonld lsp",
	"description": "A language server and language definition for JSON-LD",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "0.0.7",
	"repository": "https://github.com/ajuvercr/jsonld-lsp/",
	"categories": [
		"Other"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:jsonld"
	],
	"browser": "./client/dist/browserClientMain",
	"contributes": {
		"languages": [
			{
				"id": "jsonld",
				"extensions": [
					".jsonld"
				],
				"aliases": [
          "json-ld",
					"json+ld"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "jsonld",
				"scopeName": "source.json",
				"path": "./grammar.json"
			}
		],
		"configuration": [
			{
				"order": 22,
				"id": "jsonld lsp",
				"title": "jsonld lsp",
				"properties": {
					"lsp-web-extension-sample.trace.server": {
						"type": "string",
						"scope": "window",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "messages",
						"description": "Traces the communication between VS Code and the lsp-web-extension-sample language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/test-web": "^0.0.22",
		"@wasm-tool/wasm-pack-plugin": "^1.7.0",
		"eslint": "^8.26.0",
		"path-browserify": "^1.0.1",
		"ts-loader": "^9.3.0",
		"typescript": "^5.0.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^4.7.2"
	}
}
